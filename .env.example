# S.A.R.A. Chatbot Environment Variables
# Copy this file to .env and fill in your actual values

# Groq AI API Key (Required)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Session Secret (Required)
# Use a strong, random secret for session encryption
SESSION_SECRET=your_strong_session_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Optional)
# If using external PostgreSQL database
DATABASE_URL=postgresql://username:password@localhost:5432/sarabot

# Object Storage (Optional)
# If using Replit Object Storage
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PRIVATE_OBJECT_DIR=your_private_dir
PUBLIC_OBJECT_SEARCH_PATHS=your_public_paths